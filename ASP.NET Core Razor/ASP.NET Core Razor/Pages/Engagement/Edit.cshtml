@model ASP.NET_Core_Razor.Pages.Engagement.EditModel
@{
    ViewData["Title"] = "Edit Engagement";
}

<h1>Edit</h1>

<h4>Engagements</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="engagement.id" />
            <div class="form-group">
                <label asp-for="engagement.name" class="control-label"></label>
                <input asp-for="engagement.name" class="form-control" />
                <span asp-validation-for="engagement.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="engagement.description" class="control-label"></label>
                <input type="text" asp-for="engagement.description" class="form-control" />
                <span asp-validation-for="engagement.description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Engagement">Back to List</a>
</div>

@section Scripts {
